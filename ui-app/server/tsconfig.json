{
	"compilerOptions": {
		"lib": ["ES2022", "DOM"],
		"module": "CommonJS",
		"target": "ES2022",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"outDir": "dist",
		"rootDir": "..",
		"types": ["node"],
		"baseUrl": "..",
		"typeRoots": ["../client/node_modules/@types"],
		"paths": {
			"*": ["../client/node_modules/*", "*"]
		}
	},
	"include": ["src/**/*", "../client/src/**/*", "../shared/**/*"],
	"exclude": ["../client/src/__tests__/**"]
}

